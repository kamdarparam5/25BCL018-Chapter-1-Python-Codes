#8 : 

num = int(input("Enter number: "))
factorial = 1
while num > 0:
    factorial *= num
    num -= 1
print("Factorial:", factorial)

#9 : 

n = int(input("Enter N: "))
for i in range(n, 0, -1):
    print(i, end=' ')
